{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    //修复useEcharts写入错误
    "outDir": "./dist",
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "vue3-scale-box.d.ts",
    "src/hooks/.ts",
    "./src/*.ts",
    "./src/*.vue",
    "./src/*.ext",
    "./auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}